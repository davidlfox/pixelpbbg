@model PixelApp.Models.Note

@{
    ViewBag.Title = "Mailbox Note";
}

<style type="text/css">
    dl {
        background-color: #646266;
    }
</style>

<div>
    <a href="@Url.Action("Index")" class="btn btn-success">Back to Mailbox</a>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
    
        <dd>
            @Html.Raw(Model.Title)
        </dd>
    
        <dt>
            @Html.DisplayNameFor(model => model.Body)
        </dt>
    
        <dd>
            @Html.Raw(Model.Body)
        </dd>
    
        <dt>
            @Html.DisplayNameFor(model => model.Sent)
        </dt>
    
        <dd>
            @Html.DisplayFor(model => model.Sent)
        </dd>
    
    </dl>
</div>
