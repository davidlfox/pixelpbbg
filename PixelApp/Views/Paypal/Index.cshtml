@model PixelApp.Views.Paypal.Models.PaypalViewModel
@{
    ViewBag.Title = "Index";
    var boostHours = ViewBag.BoostHours;
}

@if (boostHours > 0)
{
    <div class="alert alert-info">
        <h3>You have @boostHours @string.Format("hour{0}", boostHours > 1 ? "s" : string.Empty) remaining!</h3>
        <h4>You're currently boosted! You can always add more time to your boost and really gain an edge!</h4>
    </div>
}

<div class="alert alert-success">
    <h2>Purchase a 24-hour Resource Boost</h2>
    <h3>For just $0.99!</h3>
    <h4>At the top of each hour when your population gathers resources, you'll get a <strong><u>100% BONUS</u></strong> on resource collection!</h4>

    <form target="paypal" action="@Model.PaypalButtonUrl" method="post">
        <input type="hidden" name="cmd" value="_s-xclick">
        <input type="hidden" name="hosted_button_id" value="@Model.PaypalButtonId">
        <input type="hidden" name="custom" value="@Model.UserId" />
        <input type="image" src="@Model.PaypalImageUrl" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
        <img alt="" border="0" src="@Model.PaypalPixelUrl" width="1" height="1">
    </form>
</div>
